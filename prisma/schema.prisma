// dev access: name = dev, pw = devAccess

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Chip {
  id             Int    @id @default(autoincrement())
  value          Int    @unique
  price          Int    @unique
  bundles        ChipsInBundle[]
  transactions   ChipInTransaction[]
}

model Bundle {
  id             Int    @id @default(autoincrement())
  name           String
  price          Int
  chips          ChipsInBundle[]
  transactions   BundleInTransaction[]
}

model Transaction {
  id             Int    @id @default(autoincrement())
  creator        User   @relation(fields: [creatorID], references: [id])
  bundles        BundleInTransaction[]
  chips          ChipInTransaction[]
  isPurchase     Boolean
  sessionId      Int
  createdAt      DateTime @default(now())
  creatorID      Int
}

model User {
  id             Int    @id @default(autoincrement())
  name           String @unique
  password       String
  isAdmin        Boolean
  transactions   Transaction[]
  currentSession Int?
}

model ChipsInBundle {
  chip      Chip     @relation(fields: [chipID], references: [id])
  chipID    Int
  bundle    Bundle  @relation(fields: [bundleID], references: [id])
  bundleID  Int
  amount    Int

  @@id([chipID, bundleID])
}

model BundleInTransaction {
  bundle        Bundle       @relation(fields: [bundleID], references: [id])
  bundleID      Int
  transaction   Transaction  @relation(fields: [transactionID], references: [id])
  transactionID Int
  amount        Int

  @@id([bundleID, transactionID])
}

model ChipInTransaction {
  chip          Chip           @relation(fields: [chipID], references: [id])
  chipID        Int
  transaction   Transaction  @relation(fields: [transactionID], references: [id])
  transactionID Int
  amount        Int

  @@id([chipID, transactionID])
}